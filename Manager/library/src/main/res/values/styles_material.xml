<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Genius.Widget.Button" parent="android:Widget.Button">
        <item name="gFont">@null</item>
        <item name="gTouchColor">@color/press</item>
        <item name="gTouchEffect">auto</item>
        <item name="gTouchCornerRadius">@dimen/g_button_touch_corners_radius</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="Genius.Widget.CompoundButton.CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="gFont">@null</item>
        <item name="gMarkColor">@color/hint</item>
        <item name="gBorderSize">@dimen/g_checkBox_borderSize</item>
        <item name="gIntervalSize">@dimen/g_checkBox_borderSize</item>
        <item name="gMarkSize">22dp</item>
    </style>

</resources>