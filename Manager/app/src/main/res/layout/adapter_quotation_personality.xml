<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/middle"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/xian" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quotation_personality_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gexingxiang" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/quotation_personality_img"
            android:background="@drawable/slash_bg" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offer_quotation_term"
                android:textColor="@color/gray_60"
                android:textSize="@dimen/input_front" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/offer_quotation_volume"
                    android:textColor="@color/gray_60"
                    android:textSize="@dimen/input_front" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/offer_quotation_price"
                    android:textColor="@color/gray_60"
                    android:textSize="@dimen/input_front" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <com.seven.library.view.AutoLoadRecyclerView
        android:id="@+id/quotation_personality_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_max" />

    <com.seven.library.view.DashedLineView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/quotation_personality_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="@color/gray_70"
        android:textSize="@dimen/input_front" />

    <com.seven.library.view.DashedLineView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/offer_quotation_personality_money"
        android:textColor="@color/gray_60"
        android:textSize="@dimen/input_front" />

    <TextView
        android:id="@+id/offer_quotation_personality_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black_30"
        android:textSize="@dimen/text_main" />

</LinearLayout>