<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/space_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_max">

        <RelativeLayout
            android:id="@+id/space_item_remove"
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/remove" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/space_item_remove"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/space_item_line"
                android:layout_width="3dp"
                android:layout_height="15dp"
                android:background="@drawable/red_line" />

            <TextView
                android:id="@+id/space_item_name"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black_30"
                android:textSize="@dimen/input_front" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_min"
                android:layout_marginLeft="@dimen/padding_max"
                android:background="@drawable/btn_white_border">

                <TextView
                    android:id="@+id/space_item_area_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:text="@string/offer_package_area"
                    android:textColor="@color/gray_60"
                    android:textSize="@dimen/text_min" />

                <TextView
                    android:id="@+id/space_item_area_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:text="@string/offer_package_area_unit"
                    android:textColor="@color/gray_60"
                    android:textSize="@dimen/text_min" />

                <EditText
                    android:id="@+id/space_item_area_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/space_item_area_unit"
                    android:layout_toRightOf="@+id/space_item_area_hint"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="@color/black_30"
                    android:textSize="@dimen/input_back"
                    android:inputType="numberDecimal" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <com.seven.library.view.DashedLineView
        android:id="@+id/space_item_dashed"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="70dp" />

</LinearLayout>