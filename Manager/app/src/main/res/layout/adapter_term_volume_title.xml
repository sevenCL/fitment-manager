<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_max"
    android:paddingRight="@dimen/padding_max">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_max"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目"
            android:textSize="@dimen/input_front"
            android:textColor="@color/gray_60"
            android:layout_marginRight="@dimen/padding_max"/>

        <TextView
            android:id="@+id/volume_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/input_front"
            android:textColor="@color/gray_70"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_max"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单价"
            android:textSize="@dimen/input_front"
            android:textColor="@color/gray_60"
            android:layout_marginRight="@dimen/padding_max"/>

        <TextView
            android:id="@+id/volume_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/input_front"
            android:textColor="@color/gray_70"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_max"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textSize="@dimen/input_front"
            android:textColor="@color/gray_60"
            android:layout_marginRight="@dimen/padding_max"/>

        <TextView
            android:id="@+id/volume_describe_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/input_front"
            android:textColor="@color/gray_70"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        android:layout_marginTop="@dimen/padding_max"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_max">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空间"
            android:textSize="@dimen/input_front"
            android:textColor="@color/gray_60"
            android:layout_marginRight="@dimen/padding_max"/>

        <TextView
            android:id="@+id/volume_unit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/input_front"
            android:textColor="@color/gray_60"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>